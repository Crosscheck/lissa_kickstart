{%
  set classes = [
    'js-notification-entity',
    'notification-entity',
    'notification--type-' ~ notification_entity.bundle|clean_class,
    view_mode ? 'notification--view-mode-' ~ view_mode|clean_class,
  ]
%}
<article{{ attributes.addClass(classes) }} id="notification-entity-{{ id }}" data-timeline-step="{{ timeline_step }}">
  {{ title_prefix }}
  <h2{{ title_attributes }}>{{ label }}</h2>
  {{ title_suffix }}
  <div{{ content_attributes.addClass('notification_entity__content') }}>
    {{ content }}
  </div>
</article>
